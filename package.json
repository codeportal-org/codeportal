{
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean",
    "storybook:portal": "turbo storybook --filter @codeportal/portal-lang",
    "format": "prettier --write \"**/*.{css,js,json,jsx,ts,tsx,md}\"",
    "dev:db": "pscale connect codeportal main --port 3309",
    "db:generate": "turbo run prisma:generate --filter web",
    "dev:full": "pnpm db:generate && concurrently \"pnpm dev\" \"pnpm dev:db\" --kill-others"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^4.2.0",
    "concurrently": "^8.2.0",
    "eslint": "^7.32.0",
    "eslint-config-custom": "workspace:*",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.4.1",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.6.10"
}
